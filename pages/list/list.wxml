<template name="meta">
  <view class="weui-media-box__info__meta">
    <icon wx:if="{{info === -1}}" type="warn" size="16" />
    <icon wx:if="{{info === 0}}" type="warn" color="orange" size="16" />
    <icon wx:if="{{info === 1}}" type="success" size="16" />
    <text>{{user}}</text>
  </view>
</template>

<view class="page">
  <view class="weui-media-box weui-media-box_text" wx:for="{{food}}" wx:key="id">
    <view class="weui-media-box__title weui-media-box__title_in-text">{{item.name}}</view>
    <view class="weui-media-box__desc">{{item.desc}}</view>
    <view class="weui-media-box__info">
      <template is="meta" data="{{user: '孕妇', info: item.pregnant}}" />
      <template is="meta" data="{{user: '产妇', info: item.puerpera}}" />
      <template is="meta" data="{{user: '婴儿', info: item.baby}}" />
    </view>
  </view>
</view>
